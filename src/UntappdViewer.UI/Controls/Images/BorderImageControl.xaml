<UserControl x:Class="UntappdViewer.UI.Controls.Images.BorderImageControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:UntappdViewer.UI.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="450">
    <controls:ClippingBorder CornerRadius="10" Margin="2, 2, 2, 2">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="1"/>
        </Border.Effect>
        <Image Source="{Binding ImagePath, Converter={StaticResource PathToImageConverter}}" ToolTip="{Binding ToolTip}" Stretch="Uniform"/>
    </controls:ClippingBorder>
</UserControl>