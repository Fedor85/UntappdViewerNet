<UserControl x:Class="UntappdViewer.UI.Controls.YouTubeVideo.YouTubeVideo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:wpf="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
             mc:Ignorable="d" Background="Transparent"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="MainGrid">
        <wpf:WebView2 x:Name="WebView"/>
        <Grid x:Name="ButtonGrid" Width="20" Height="20" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="5" Visibility="Collapsed"
              PreviewMouseLeftButtonDown="GridPreviewMouseLeftButtonDown">
            <Grid Background="#ffff" Opacity="0.8"/>
            <Image Source="..\..\Resources\close_icon.ico"/>
        </Grid>
    </Grid>
</UserControl>
