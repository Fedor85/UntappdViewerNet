                                        </chartingToolkit:Chart.Axes>
                                        <chartingToolkit:ScatterSeries DependentValuePath="Value" IndependentValuePath="Key"  ItemsSource="{Binding StatisticsProject.IBUToABV}"
                                                                       DataPointStyle="{StaticResource ScatterDataPointStyle}"/>
                                    </chartingToolkit:Chart>
                                </Grid>
                            </Grid>
                            <Grid Margin="{StaticResource DefautChartOffsetBottom}">
                                <ContentControl Template="{StaticResource BackgroundControl}"/>
                                <Grid Margin="{StaticResource DefautChartMargin}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <chartingToolkit:Chart Grid.Column="0" Style="{StaticResource RatingScoreChartStyle}" TitleStyle="{StaticResource ChartTitleStyle}"
                                                           Title="{x:Static properties:Resources.ABV}" Height="300">
                                        <chartingToolkit:PieSeries DependentValuePath="Value" IndependentValuePath="Key"  ItemsSource="{Binding StatisticsProject.ABVCount}"
                                                                   LegendItemStyle="{StaticResource LegendItemStyle}" DataPointStyle="{StaticResource PipeDataPointStyle}"/>
                                    </chartingToolkit:Chart>
                                    <chartingToolkit:Chart Grid.Column="2" Style="{StaticResource RatingScoreChartStyle}" TitleStyle="{StaticResource ChartTitleStyle}"
                                                           Title="{x:Static properties:Resources.IBU}" Height="300">
                                        <chartingToolkit:PieSeries DependentValuePath="Value" IndependentValuePath="Key"  ItemsSource="{Binding StatisticsProject.IBUCount}"
                                                                   LegendItemStyle="{StaticResource LegendItemStyle}" DataPointStyle="{StaticResource PipeDataPointStyle}">
                                        </chartingToolkit:PieSeries>
                                    </chartingToolkit:Chart>
                                </Grid>
                            </Grid>
                        </StackPanel>
                        <b:Interaction.Behaviors>
                            <behaviors:ParentScrollingBehavior ParentScrollViewer="{StaticResource ScrollingToken}" />
                        </b:Interaction.Behaviors>
                    </ScrollViewer>
                </TabItem>
                <TabItem Header="{x:Static properties:Resources.Map}">
                    <ScrollViewer  VerticalScrollBarVisibility="Auto">
