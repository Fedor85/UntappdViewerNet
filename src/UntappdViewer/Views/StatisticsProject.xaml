                                            <chartingToolkit:LinearAxis Orientation="X" Minimum="0" Maximum="{Binding StatisticsProject.MaxXAxisServingTypeCount}" ShowGridLines="True" />
                                            <chartingToolkit:CategoryAxis Style="{StaticResource BarSeriesYLinearAxisStyle}" AxisLabelStyle="{StaticResource ServingTypeAxisLabelStyle}">
                                                <b:Interaction.Behaviors>
                                                    <behaviors:SynchronisedWidthBehavior RegisterToken="{StaticResource WidthTokenLeft}" />
                                                </b:Interaction.Behaviors>
                                            </chartingToolkit:CategoryAxis>
                                        </chartingToolkit:Chart.Axes>
                                        <chartingToolkit:BarSeries  DependentValuePath="Value" IndependentValuePath="Key" ItemsSource="{Binding StatisticsProject.ServingTypeCount}"
                                                                    DataPointStyle="{StaticResource BarDataPointStyle}" IsSelectionEnabled="True"/>
                                    </chartingToolkit:Chart>
                                    <chartingToolkit:Chart Grid.Column="2" Style="{StaticResource BarSeriesChartStyle}" TitleStyle="{StaticResource ChartTitleStyle}"
                                                   Title="{x:Static properties:Resources.ServingTypeRating}">
                                        <chartingToolkit:Chart.ChartAreaStyle>
                                            <Style TargetType="{x:Type FrameworkElement}">
                                                <Setter Property="Height" Value="{Binding StatisticsProject.HeightChartServingType}" />
                                            </Style>
                                        </chartingToolkit:Chart.ChartAreaStyle>
                                        <chartingToolkit:Chart.Axes>
                                            <chartingToolkit:LinearAxis Orientation="X" Minimum="0" Maximum="{StaticResource MaxRating}" ShowGridLines="True"/>
                                            <chartingToolkit:CategoryAxis Style="{StaticResource BarSeriesYLinearAxisStyle}" AxisLabelStyle="{StaticResource ServingTypeAxisLabelStyle}">
                                                <b:Interaction.Behaviors>
                                                    <behaviors:SynchronisedWidthBehavior RegisterToken="{StaticResource WidthTokenRight}" />
                                                </b:Interaction.Behaviors>
                                            </chartingToolkit:CategoryAxis>
                                        </chartingToolkit:Chart.Axes>
                                        <chartingToolkit:BarSeries  DependentValuePath="Value" IndependentValuePath="Key" ItemsSource="{Binding StatisticsProject.ServingTypeRating}"
                                                                    DataPointStyle="{StaticResource BarDataPointStyle}" IsSelectionEnabled="True"/>
                                    </chartingToolkit:Chart>
                                </Grid>
                            </Grid>
                            <Grid Margin="{StaticResource DefautChartOffsetBottom}">
                                <ContentControl Template="{StaticResource BackgroundControl}"/>
                                <Grid Margin="{StaticResource DefautChartMargin}">
                                    <chartingToolkit:Chart Style="{StaticResource ChartStyleHideLegend}" TitleStyle="{StaticResource ChartTitleStyle}"
