<UserControl x:Class="UntappdViewer.Views.Controls.AccessToken"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:properties="clr-namespace:UntappdViewer.Properties"
             xmlns:controls="clr-namespace:UntappdViewer.UI.Controls;assembly=UntappdViewer.UI"
             mc:Ignorable="d" >
    <StackPanel>
        <Label Content="{x:Static properties:Resources.AccessTokenCaption}"/>
        <DockPanel HorizontalAlignment="Left">
            <controls:SmartTextBox x:Name="TokenTextBox" PasswordMode="True" Width="340"
                                   HintText="{x:Static properties:Resources.EnterAccessToken}"/>
            <Button x:Name="AccessTokenButton"  Click="AccessTokenButtonOnClick"
                    IsEnabled="False" Margin="5,0,0,0">
                <DockPanel>
                    <Image x:Name="CheckStatusImg" Height="15" Width="15" Visibility="Visible"
                           Source="..\..\Resources\red-x.png" Margin="0,0,5,0"/>
                    <TextBlock x:Name="ButtonTextControl" Margin="0,0,5,0"/>
                </DockPanel>
            </Button>
        </DockPanel>
    </StackPanel>

</UserControl>